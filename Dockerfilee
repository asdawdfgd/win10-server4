# التصحيح: النسخة الـ Alpine اسمها latest
FROM ghcr.io/linuxserver/webtop:latest

# تسطيب Wine والأدوات
RUN apk add --no-cache \
    wine \
    wine-mono \
    wine-gecko \
    chromium \
    font-noto \
    font-noto-arabic \
    wget \
    curl \
    unzip \
    nano \
    tar \
    xz

# إعدادات البيئة
ENV PUID=1000
ENV PGID=1000
ENV TZ=Africa/Cairo

# البورت
EXPOSE 3000
