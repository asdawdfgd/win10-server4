FROM ghcr.io/dockur/windows:latest

# إعدادات النسخة
ENV VERSION="10"

# اسم المستخدم والباسورد
ENV USERNAME="TOOLBOXLAP"
ENV PASSWORD="admin@123"

# أمر هام جداً عشان يشتغل على Railway بدون KVM
ENV KVM="N"

# موارد السيرفر
ENV RAM_SIZE="16G"
ENV CPU_CORES="4"
ENV DISK_SIZE="100G"

# الموافقة
ENV ACCEPT_EULA="Y"

# البورتات
EXPOSE 8006 3389
