# التصحيح: لازم نكتب ghcr.io في الأول
FROM ghcr.io/linuxserver/webtop:alpine-xfce

# باقي الكود زي ما هو
RUN apk add --no-cache \
    wine \
    wine-mono \
    wine-gecko \
    chromium \
    font-noto \
    font-noto-arabic \
    wget \
    curl \
    unzip \
    nano

ENV PUID=1000
ENV PGID=1000
ENV TZ=Africa/Cairo

EXPOSE 3000
