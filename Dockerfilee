# النسخة الخفيفة (Alpine)
FROM ghcr.io/linuxserver/webtop:latest

# التعديل: شيلنا wine-mono و wine-gecko
# وتأكدنا إن باقي الأدوات موجودة وصحيحة
RUN apk add --no-cache \
    wine \
    chromium \
    font-noto \
    font-noto-arabic \
    wget \
    curl \
    unzip \
    nano \
    tar \
    xz

# إعدادات البيئة
ENV PUID=1000
ENV PGID=1000
ENV TZ=Africa/Cairo

# فتح البورت
EXPOSE 3000
