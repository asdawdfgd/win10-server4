# النسخة الخفيفة
FROM ghcr.io/linuxserver/webtop:latest

# شيلنا wine-mono و wine-gecko عشان مش مدعومين في المخزن ده
# وتأكدنا إن باقي الأدوات موجودة
RUN apk add --no-cache \
    wine \
    chromium \
    font-noto \
    font-noto-arabic \
    wget \
    curl \
    unzip \
    nano \
    tar \
    xz

# إعدادات البيئة
ENV PUID=1000
ENV PGID=1000
ENV TZ=Africa/Cairo

# فتح البورت
EXPOSE 3000
